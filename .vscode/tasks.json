{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "build",
                "-S",
                ".",
                "-G",
                "MinGW Makefiles",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DCMAKE_CXX_COMPILER=gcc",
                "-DCMAKE_C_COMPILER=gcc",
                "-DCMAKE_MAKE_PROGRAM=mingw32-make",
                "-DCMAKE_PREFIX_PATH=${workspaceFolder}/vcpkg_installed/x64-windows",
                "-DCMAKE_FIND_ROOT_PATH=${workspaceFolder}/vcpkg_installed/x64-windows",
                "-DCMAKE_LIBRARY_PATH=${workspaceFolder}/vcpkg_installed/x64-windows/lib",
                "-DCMAKE_INCLUDE_PATH=${workspaceFolder}/vcpkg_installed/x64-windows/include",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PATH": "C:\\msys64\\mingw64\\bin;${env:PATH}"
                }
            },
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "CMake Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--config",
                "Debug",
                "--parallel",
                "--",
                "-j8"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PATH": "C:\\msys64\\mingw64\\bin;${env:PATH}"
                }
            },
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["CMake Configure"]
        }
    ]
}